{
  "name": "pfa-api",
  "version": "1.0.0",
  "description": "The api gateway used for retrieving pro-football-analytics resources",
  "main": "server.js",
  "scripts": {
    "test": "NODE_PATH=src yarn run eslint && yarn run mocha",
    "start": "NODE_PATH=src nodemon --exec babel-node src/",
    "inspect": "NODE_PATH=src nodemon --inspect=0.0.0.0:5858 --exec babel-node src/",
    "inspect-brk": "NODE_PATH=src nodemon --inspect-brk=0.0.0.0:5858 --exec babel-node src/",
    "mocha": "NODE_PATH=src nyc mocha $NODE_DEBUG_OPTION --require babel-core/register {src,test}/**/*.{spec,test}.js --recursive --exit",
    "flow": "flow"
  },
  "author": "Sean Costello <me@seancostello.io>",
  "license": "ISC",
  "dependencies": {
    "apollo-engine": "^1.1.1",
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.2",
    "helmet": "^3.12.1",
    "pg": "^7.4.3",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.19.1",
    "flow-bin": "^0.73.0",
    "mocha": "^5.2.0"
  }
}
